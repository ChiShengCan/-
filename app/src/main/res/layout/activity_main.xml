<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

        <RelativeLayout
            android:background="@color/colorAccent"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="#333"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/tv_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/iv_search"
                android:src="@drawable/icon_search"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>
    <View
        android:layout_above="@+id/rg_root"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <RadioGroup
        android:id="@+id/rg_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/gray"
            android:drawableTop="@drawable/home_bg_selected"
            android:gravity="center"
            android:text="首页"/>
        <RadioButton
            android:textSize="10sp"
            android:id="@+id/rb_find"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/gray"
            android:drawableTop="@drawable/find_bg_selected"
            android:gravity="center"
            android:text="发现"
            />

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/rb_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/gray"
            android:drawableTop="@drawable/hot_bg_selected"
            android:gravity="center"
            android:text="热门"/>
        <RadioButton
            android:textSize="10sp"
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:button="@null"
            android:drawableTop="@drawable/mine_bg_selected"
            android:gravity="center"
            android:text="我的"/>
    </RadioGroup>


</LinearLayout>