<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="@dimen/dp_8">

    <ImageView
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_centerVertical="true"
        android:id="@+id/imgv_video"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@color/coclor_eee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toRightOf="@id/imgv_video">

        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/coclor_333"
            android:id="@+id/video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="3"
            android:text="标题"/>

        <TextView
            android:id="@+id/flag_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_title"
            android:layout_marginTop="@dimen/dp_3"/>

        <ImageView
            android:id="@+id/video_cache_operation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/video_title"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/pause_cache"/>

    </RelativeLayout>


</RelativeLayout>