<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_common_shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bg_item"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:padding="1dp"
            android:background="@drawable/bg_round_shadow"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_item_cartoon_title"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:minLines="2"
                android:text="斗破苍穹"/>

            <TextView
                android:id="@+id/tv_item_cartoon_work_room"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/tv_item_cartoon_title"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="csc工作室" />

            <TextView
                android:id="@+id/tv_item_cartoon_type"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/tv_item_cartoon_work_room"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:text="小说改编" />

            <TextView
                android:text="说明"
                android:id="@+id/tv_item_cartoon_desc"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/tv_item_cartoon_type"
                android:maxLines="2"
                android:minLines="2"/>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>